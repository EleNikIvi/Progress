<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme.Violet">
        <item name="colorPrimaryDark">@color/violetPrimaryDark</item>

        <item name="toolbarBackground">@color/violetPrimaryLight</item>
        <item name="contentBackground">@drawable/bg_violet_content</item>
        <item name="bottomNavigationBackground">@color/violetPrimaryDark</item>

        <item name="textColor">@color/white</item>
        <item name="iconColor">@color/white</item>
    </style>


    <style name="AppToolbar">
        <item name="android:background">?toolbarBackground</item>
        <item name="android:textColorPrimary">?textColor</item>
        <item name="android:textColorSecondary">?textColor</item>
    </style>
</resources>
