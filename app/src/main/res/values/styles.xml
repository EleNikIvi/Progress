<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowAnimationStyle">@style/AppAnimationActivity</item>

        <item name="textColor">@color/white</item>
        <item name="iconColor">@color/white</item>
    </style>

    <style name="AppTheme.Space">
        <item name="colorPrimaryDark">@color/spacePrimaryDark</item>

        <item name="toolbarBackground">@color/spacePrimaryLight</item>
        <item name="contentBackground">@drawable/bg_space_content</item>
        <item name="bottomNavigationBackground">@color/spacePrimaryDark</item>
    </style>

    <style name="AppTheme.Mint">
        <item name="colorPrimaryDark">@color/mintPrimaryDark</item>

        <item name="toolbarBackground">@color/mintPrimaryLight</item>
        <item name="contentBackground">@drawable/bg_mint_content</item>
        <item name="bottomNavigationBackground">@color/mintPrimaryDark</item>
    </style>

    <style name="AppTheme.Sky">
        <item name="colorPrimaryDark">@color/skyPrimaryDark</item>

        <item name="toolbarBackground">@color/skyPrimaryLight</item>
        <item name="contentBackground">@drawable/bg_sky_content</item>
        <item name="bottomNavigationBackground">@color/skyPrimaryDark</item>
    </style>

    <style name="AppTheme.Cherry">
        <item name="colorPrimaryDark">@color/cherryPrimaryDark</item>

        <item name="toolbarBackground">@color/cherryPrimaryLight</item>
        <item name="contentBackground">@drawable/bg_cherry_content</item>
        <item name="bottomNavigationBackground">@color/cherryPrimaryDark</item>
    </style>


    <style name="AppAnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_out_right</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">?toolbarBackground</item>
        <item name="android:textColorPrimary">?textColor</item>
        <item name="android:textColorSecondary">?textColor</item>
    </style>
</resources>
